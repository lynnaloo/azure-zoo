@page "/"
@using Microsoft.AspNetCore.Components
@inject NavigationManager Navigation

<h3>Welcome to the Zoo Visitor Experience</h3>

<div class="quick-access-buttons">
    <button @onclick="NavigateToTicketPurchase">Purchase Tickets</button>
    <button @onclick="NavigateToExhibitInfo">Exhibit Information</button>
    <button @onclick="NavigateToFeedback">Feedback</button>
</div>

@code {
    private void NavigateToTicketPurchase()
    {
        Navigation.NavigateTo("/ticket-purchase");
    }

    private void NavigateToExhibitInfo()
    {
        Navigation.NavigateTo("/exhibit-info");
    }

    private void NavigateToFeedback()
    {
        Navigation.NavigateTo("/feedback");
    }
}